<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#f6f6f6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:background="#00000000"
        android:hapticFeedbackEnabled="true"
        android:orientation="vertical"
        android:weightSum="2"
        android:maxLines="2"
        android:gravity="bottom">


        <TextView
            android:id="@+id/mainTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="#00000000"
            android:focusable="auto"
            android:fontFamily="serif"
            android:gravity="bottom"
            android:paddingLeft="40px"
            android:text="Log Into"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/mainTitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="#00000000"
            android:focusable="auto"
            android:fontFamily="serif"
            android:gravity="bottom"
            android:paddingLeft="40px"
            android:text="Your Account"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1.1in"
        android:weightSum="2"
        android:orientation="vertical"
        tools:context=".MainActivity"
        android:background="@color/white"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:paddingBottom="20dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            >

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:hint="*********123"
                android:inputType="textWebEmailAddress|text"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="40dp"
                android:textColor="#757575"
                android:textColorHint="#000"
                android:textSize="18sp">

                <requestFocus />
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:padding="20dp"
                android:text="Email"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:padding="20dp"
                android:text="Wrong Emalil"
                android:textColor="#F44336"
                android:textSize="16sp" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_weight="1"
            >

            <EditText
                android:id="@+id/editText1"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="30dp"
                android:hint="*********123"
                android:inputType="numberPassword"
                android:padding="10dp"
                android:textColor="#757575"
                android:textColorHint="#000">

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/forgotPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:gravity="end"
                android:hint="Forgot?"
                android:inputType="numberPassword"
                android:padding="10dp"
                android:textColor="#757575"
                android:textColorHint="#808080"
                android:textSize="16sp"
                android:textStyle="bold">

                <requestFocus />
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:padding="10dp"
                android:text="Password"
                android:textSize="16sp" />
        </FrameLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2.33in"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#242329"
            android:backgroundTintMode="add"
            android:paddingLeft="70px"
            android:paddingTop="35px"
            android:paddingRight="50px"
            android:paddingBottom="35px"
            android:text="Log In"
            android:textAllCaps="false"
            android:textSize="48px"
            app:cornerRadius="100px" />

        <TextView
            android:id="@+id/title1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:focusable="auto"
            android:fontFamily="serif"
            android:gravity="center"
            android:padding="40px"
            android:text="Or Sign up with social account"
            android:textColor="#4C4C4C"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2.9in"
        android:orientation="horizontal"
        android:weightSum="2">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingTop="40dp">


            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="0dp"
                android:backgroundTint="#010101"
                android:backgroundTintMode="add"
                android:gravity="center"
                android:paddingLeft="200px"
                android:paddingTop="35px"
                android:paddingRight="50px"
                android:paddingBottom="35px"
                app:cornerRadius="100px"
                app:icon="@drawable/facebook"
                app:iconSize="85px"
                app:iconTint="#FFFFFF" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingTop="40dp"
            android:paddingRight="20dp">


            <Button
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#01abee"
                android:backgroundTintMode="add"
                android:paddingLeft="200px"
                android:paddingTop="35px"
                android:paddingRight="50px"
                android:paddingBottom="35px"
                app:cornerRadius="100px"
                app:icon="@drawable/twitter"
                app:iconPadding="-5px"
                app:iconSize="80px"
                app:iconTint="#FFFFFF" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0.1"/>

</RelativeLayout>